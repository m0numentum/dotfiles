[bar/root]
height = 30
offset-y = 5
override-redirect = true
monitor = ${env:MONITOR:}
radius = 15.0
fixed-center = true
background = ${colors.base}
foreground = ${colors.rosewater}
line-size = 3
line-color = #f00

border-size = 0.5
border-color = #00000000

padding-left = 1
padding-right = 1

module-margin-left = 0
module-margin-right = 0

font-0 = "FiraCode:size=10:style=Regular;2"
font-1 = "Noto Serif Tibetan:size=10;2"
font-2 = "FiraCode Nerd Font:pixelsize=12;1"

cursor-click = pointer
cursor-scroll = ns-resize

[bar/wm]
inherit = bar/root
width = 7%
offset-x = 0.5%

modules-left = i3

separator = ""

wm-restack = i3

[bar/bat]
width = 3.5%
inherit = bar/root

offset-x = 76.6%

modules-center = battery
module-margin-left = 0
module-margin-right = 0

separator = " "

[bar/net]
width = 3%
inherit = bar/root

offset-x = 81.6%

modules-center = wireless-network
module-margin-left = 1
module-margin-right = 0

separator = " "

[bar/audio]
width = 4%
inherit = bar/root

offset-x = 85.1%

modules-right = pulseaudio
module-margin-left = 1
module-margin-right = 0

separator = " "

[bar/date]
width = 7.5%
inherit = bar/root

offset-x = 90.5%

modules-right = date
module-margin-left = 1
module-margin-right = 0

separator = " "
